{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "typecheck": "tsc",
    "lint": "lint app",
    "lint:ts": "eslint --ext \".js,.ts,.md,.jsx,.tsx,.mdx\" app --fix --ignore-path .gitignore --resolve-plugins-relative-to .",
    "lint:style": "stylelint \"**/*.{sass,scss,pcss,postcss,css}\" --fix --allow-empty-input --ignore-path .gitignore",
    "prepare": "husky install",
    "lint-staged": "eslint --cache --fix --ignore-path .gitignore --resolve-plugins-relative-to ."
  },
  "lint-staged": {
    "*.{js,ts,md,jsx,tsx,mdx}": "eslint --cache --fix --ignore-path .gitignore --resolve-plugins-relative-to .",
    "*.{sass,scss,pcss,postcss,css}": "stylelint --fix --allow-empty-input --ignore-path .gitignore"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@remix-run/css-bundle": "^1.16.1",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/vercel": "^1.16.1",
    "@typescript-eslint/parser": "^5.59.7",
    "@vercel/node": "^2.10.3",
    "accept-language": "^3.0.18",
    "axios": "^1.6.5",
    "clsx": "^2.1.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "dotnet": "^1.1.4",
    "flowbite": "^2.2.1",
    "flowbite-react": "^0.7.2",
    "husky": "^8.0.3",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "react-redux": "^9.0.4",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/types": "^17.4.4",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@remix-run/serve": "^1.16.1",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.38.0",
    "prettier": "2.8.8",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14"
  }
